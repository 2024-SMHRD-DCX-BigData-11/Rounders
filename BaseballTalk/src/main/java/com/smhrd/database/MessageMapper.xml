<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.database.MessageMapper">
	
	<!-- 쿼리 -->
	<insert id="insertMessage" parameterType="Message">
		insert into web_message values(num_message.nextval, #{sender}, #{recipient}, #{message}, sysdate)
	</insert>
	
	<select id="selectMessage" parameterType = "String" resultType = "Message">
	
		select * from web_message where recipient = #{email}
		
	</select>
	
	<delete id = "deleteAllMessage" parameterType = "String">
		delete from web_message where recipient = #{email}
	</delete>
	
	<delete id = "deleteMessage" parameterType = "String">
		delete from web_message where recipient = #{email}
	</delete>
	
</mapper>